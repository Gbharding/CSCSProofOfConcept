@page
@model CSCSProofOfConcept.Pages.DistributionCenters.DetailsModel
@using CSCSProofOfConcept.Data

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="detail-table">
    <tr class="detail-table">
        <th class="detail-table">
            @Html.DisplayNameFor(model => model.DistributionCenter.Name)
        </th>
        <td class="detail-table">
            @Html.DisplayFor(model => model.DistributionCenter.Name)
        </td>
    </tr>
    <tr class="detail-table">
        <th class="detail-table">
            @Html.DisplayNameFor(model => model.DistributionCenter.Address)
        </th>
        <td class="detail-table">
            @Html.DisplayFor(model => model.DistributionCenter.Address)
        </td>
    </tr>
    <tr class="detail-table">
        <th class="detail-table">
            @Html.DisplayNameFor(model => model.DistributionCenter.NumTrucks)
        </th>
        <td class="detail-table">
            @Html.DisplayFor(model => model.DistributionCenter.NumTrucks)
        </td>
    </tr>
</table>


@if (CacheData.User != "CM")
{
    <div style="display: flex; margin-top: 15px;">
        <div class="prj-button-container">
            <a class="prj-button" asp-page="./Edit" asp-route-id="@Model.DistributionCenter.Id">Edit</a>
        </div>
        <div class="prj-button-container">
            <a class="prj-button" asp-page="./Index">Back to List</a>
        </div>
    </div>
}
else
{
    <div style="display: flex; margin-top: 15px;">
        <div class="prj-button-container">
            <a class="prj-button" asp-page="./Index">Back to List</a>
        </div>
    </div>
}
