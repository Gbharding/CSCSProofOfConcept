@page
@model CSCSProofOfConcept.Pages.DistributionCenters.IndexModel

@{
    ViewData["Title"] = "DC Manager";
}

<h1>DC Manager</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistributionCenter[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistributionCenter[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistributionCenter[0].NumTrucks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DistributionCenter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTrucks)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
