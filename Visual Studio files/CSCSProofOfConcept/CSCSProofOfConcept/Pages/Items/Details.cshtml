@page
@model CSCSProofOfConcept.Pages.Items.DetailsModel
@using CSCSProofOfConcept.Data

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="detail-table">
    <tr class="detail-table">
        <th class="detail-table">
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <td class="detail-table">
            @Html.DisplayFor(model => model.Item.Name)
        </td>
    </tr>
    <tr class="detail-table">
        <th class="detail-table">
            @Html.DisplayNameFor(model => model.Item.Specifications)
        </th>
        <td class="detail-table">
            @Html.DisplayFor(model => model.Item.Specifications)
        </td>
    </tr>
    <tr class="detail-table">
        <th class="detail-table">
            @Html.DisplayNameFor(model => model.Item.DistributionCenter)
        </th>
        <td class="detail-table">
            @Html.DisplayFor(model => model.Item.DistributionCenter.Name)
        </td>
    </tr>
</table>

@if (CacheData.User == "CM" || CacheData.User == "SSM")
{
    <div style="display: flex; margin-top: 15px;">
        <div class="prj-button-container">
            <a class="prj-button" asp-page="./Edit" asp-route-id="@Model.Item.Id">Edit</a>
        </div>
        <div class="prj-button-container">
            <a class="prj-button" asp-page="./Index">Back to List</a>
        </div>
    </div>
}
else
{
    <div style="display: flex; margin-top: 15px;">
        <div class="prj-button-container">
            <a class="prj-button" asp-page="./Index">Back to List</a>
        </div>
    </div>
}

