@page
@model CSCSProofOfConcept.Pages.Items.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="margin-top: 15px;" class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Item.Name" class="control-label"></label>
                <input style="margin-top: 10px;" asp-for="Item.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div style="margin-top: 15px;" class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Item.Specifications" class="control-label"></label>
                <input style="margin-top: 10px;" asp-for="Item.Specifications" class="form-control" aria-required="true" />
                <span asp-validation-for="Item.Specifications" class="text-danger"></span>
            </div>
            <div style="margin-top: 15px;" class="form-group">
                <label asp-for="Item.DistributionCenter" class="control-label"></label>
                <select style="margin-top: 10px;" asp-for="Item.DistributionCenterId" class="form-control" asp-items="@Model.DCNameSL">
                    <option value="">-- Select a Distribution Center --</option>
                    <span asp-validation-for="Item.DistributionCenterId" class="text-danger"></span>
                </select>
            </div>
            <div style="margin-top: 15px;" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="display: flex; margin-top: 15px;">
    <div class="prj-button-container">
        <a class="prj-button" asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
