@page
@model CSCSProofOfConcept.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Item.Name" class="control-label"></label>
                <input asp-for="Item.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Item.Specifications" class="control-label"></label>
                <input asp-for="Item.Specifications" class="form-control" aria-required="true"/>
                <span asp-validation-for="Item.Specifications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.DistributionCenter" class="control-label"></label>
                <select asp-for="Item.DistributionCenterId" class="form-control" asp-items="@Model.DCNameSL">
                    <option value="">-- Select a Distribution Center --</option>
                    <span asp-validation-for="Item.DistributionCenterId" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
