@page
@using CSCSProofOfConcept.Data
@model CSCSProofOfConcept.Pages.Projects.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="margin-top: 15px;" class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Project.Name" class="control-label"></label>
                <input style="margin-top: 10px;" asp-for="Project.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Project.Name" class="text-danger"></span>
            </div>
            <div style="margin-top: 15px;" class="form-group">
                <label asp-for="Project.Description" class="control-label"></label>
                <input style="margin-top: 10px;" asp-for="Project.Description" class="form-control" />
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>

            @if (CacheData.InProgPrj != 1)
                {
                <div style="margin-top: 15px;" class="form-group">
                        <label asp-for="Project.Item" class="control-label"></label>
                    <select style="margin-top: 10px;" asp-for="Project.ItemId" class="form-control" asp-items="@Model.ItemNameSL">
                            <option value="">-- Select an Item --</option>
                            <span asp-validation-for="Project.ItemId" class="text-danger"></span>
                        </select>
                    </div>
                }

            <div style="margin-top: 15px;" class="form-group">
                <label asp-for="Project.NewSpec" class="control-label"></label>
                <input style="margin-top: 10px;" asp-for="Project.NewSpec" class="form-control" />
                <span asp-validation-for="Project.NewSpec" class="text-danger"></span>
            </div>
            <div style="margin-top: 15px;" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="display: flex; margin-top: 15px;">
    <div class="prj-button-container">
        <a class="prj-button" asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
